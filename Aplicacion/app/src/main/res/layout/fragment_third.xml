<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="750dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="345dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:src="@drawable/logo_empresa" />

            <TextView
                android:id="@+id/teVMiCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Mi cuenta"
                android:textColor="@color/color_letras_principales"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teVNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Nombres"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/teVNombreBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#9A9494"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/teVCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Correo electronico"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/teVCorreoBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#9A9494"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/teVNombrePasti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Nombre del Pastillero"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/teVNombrePastiBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#9A9494"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/teVFechaNacim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Fecha de Nacimiento"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/teVFechaNacimBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#9A9494"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/teVTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Telefono"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/teVTelBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#9A9494"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/teVGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Genero"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/teVGeneroBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#9A9494"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/boton_fondo"
                android:fontFamily="@font/quicksand_medium"
                android:inputType="textCapWords"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:onClick="cerrarSesion"
                android:text="Cerrar Sesion"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>