<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="345dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:src="@drawable/logo_empresa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teVLEDAcceso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/quicksand_medium"
                android:text="Color de LED de acceso"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewLEDAcceso"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28dp"
                android:background="#008000" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLEDAcceso"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/boton_sin_fondo"
            android:textColor="@color/primary_color"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textCapWords"
            android:layout_marginTop="20dp"
            android:text="Elegir color"
            android:textIsSelectable="false"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teVLEDBloqueo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/quicksand_medium"
                android:text="Color de LED de bloqueo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewLEDBloqueo"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="#FF0000" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLEDBloqueo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton_sin_fondo"
            android:textColor="@color/primary_color"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textCapWords"
            android:text="Elegir color"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/lineaSeparacionInf"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:foreground="#BCBCBC"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/separacion" />

        <Button
            android:id="@+id/btnActualizarDatos"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/boton_fondo"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textCapWords"
            android:text="Actualizar datos"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnRecuperarContrasena"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/boton_fondo"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textCapWords"
            android:text="Cambiar contraseÃ±a"
            android:textIsSelectable="false"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>